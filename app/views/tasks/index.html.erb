<h1>Tasks#index</h1>

    <% @tasks.each do |task| %>
        <li>
            <%= task%>
        </li>
    <% end %>


<div>
    <h2>Tasks</h2>
    <%=link_to('Add New Task','#',class: 'action new') %>
    <table class='listing' style="width: 100%">
        <tr class='header'>
            <th>#</th>
            <th>Task</th>
            <th>Completed</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
        <% @tasks.each do |task| %>
            <tr>
                <td><%= task.position %></td>
                <td><%= task.name %></td>
                <td><%= task.completed? ? 'Yes':'No' %></td>
                <td><%= task.category&.name || '-' %></td>
                <td class='actions'>
                    <%= link_to("Show",task_path(task),class: 'action show') %>
                    <%= link_to("Edit",'#',class: 'action edit') %>
                    <%= link_to("Delete",'#',class: 'action delete') %>
                </td>
            </tr>
        <% end %>
    </table>

</div>