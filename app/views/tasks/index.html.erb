<div>
    <h2>Tasks</h2>
    <div class="float-right">
        <%=link_to('Add New Task', new_task_path ,class: 'action new') %>
    </div>
    <table class='listing' style="width: 100%">
        <tr class='header'>
            <th>#</th>
            <th>Task</th>
            <th>Completed</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
        <% @tasks.each do |task| %>
            <tr>
                <td><%= task.id %></td>
                <td><%= task.name %></td>
                <td><%= task.completed? ? 'Yes':'No' %></td>
                <td><%= task.category&.name || '-' %></td>
                <td class='actions'>
                    <%= link_to("Show",task_path(task),class: 'action show') %>
                    <%= link_to("Edit",'#',class: 'action edit') %>
                    <%= link_to("Delete"2, task,method: :destroy) %>
                </td>
            </tr>
        <% end %>
    </table>

</div>